{% capture vars %}
  {% assign product_url = _product.url | within: collection %}
  {% if _product.featured_image == blank %}
    {% include '__image-placeholder' %}
    {% assign image = image | link_to: product_url %}
  {% else %}
  	{% if settings.round-thumbnail-images and template != 'index' %}{% assign round-class = 'img-circle' %}{% elsif settings.round-thumbnail-images-on-homepage and template == 'index' %}{% assign round-class = 'img-circle' %}{% endif %}
		{% assign image = _product.featured_image.src | product_img_url: 'grande' | img_tag: _product.featured_image.alt, round-class | link_to: product_url %}
  {% endif %}
{% endcapture %}