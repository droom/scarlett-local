<h2>Shopping Cart</h2>

<div class="checkout_buy_wrap">
  {% include '__cart-table-titles' %}
  {% for item in cart.items %}
  {% unless item.variant.title contains 'Home Try-On' %}
  <div class="checkout_buy clearfix">
    <div class="checkout_cell1">
      <a href="{{ item.url }}">
        <img src="{{ item | img_url: 'compact' }}"  alt="{{ item.title | escape }}" />
      </a>
    </div>

    <div class="checkout_cell2">
      <h5>
        <strong>{{ item.product.title }}</strong>
      </h5>
      {% if item.product.variants.size > 1 %}
      <p>{{ item.variant.title }}</p>
      {% endif %}
    </div>

    <div class="checkout_cell3">
      <p>{{ item.quantity }}</p>
    </div>

    <div class="checkout_cell4">
      <p>{{ item.line_price | money }}</p>
    </div>

    <div class="checkout_cell5">
      <p><strong>{{ item.line_price | money }}</strong></p>
    </div>

    <div class="checkout_cell6">
      <p>
        <a href="/cart/change?line={{ forloop.index }}&quantity=0" class="checkout_remove cart">&#215;</a>
      </p>
    </div>

  </div>

  {% endunless %}
  {% endfor %}
</div>