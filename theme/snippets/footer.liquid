<footer id="footer-content" class="footer">
  {% if template == "index" %}
  <section class="as-seen">
    <h6>As seen on</h6>
    <div class="container">
      <div class="row">
        <div class="col-sm-5">
          <img src="{{ 'featured-cheshire.gif' | asset_url }}" />
        </div>
        <div class="col-sm-5">
          <img src="{{ 'featured-shortList.gif' | asset_url }}" />
        </div>
        <div class="col-sm-5">
         <img src="{{ 'featured-hyde.gif' | asset_url }}" />
       </div>
       <div class="col-sm-5">
         <img src="{{ 'featured-marie.gif' | asset_url }}" />
       </div>
       <div class="col-sm-5">
         <img src="{{ 'featured-stylist.gif' | asset_url }}" />
       </div>
     </div>
   </div>
 </section>

 {% endif %}

 <div class="container">
  {% if has_footer %}
  <div class="row">
   <hr />
   {% assign cols = '' %}
   {% for i in (i..3) %}
   {% assign c = i | plus: 1 %}
   {% assign col = 'column-' | append: c %}
   {% assign col_blog = col | append: '-blog' %}
   {% assign col_menu = col | append: '-menu' %}
   {% assign col_text = col | append: '-text' %}
   {% if settings[col_blog] != blank or settings[col_menu] != blank or settings[col_text] != blank or settings.newsletter-signup-placement contains col or settings.social-links-placement contains col %}
   {% assign cols = cols | append: col | append: '|' %}
   {% endif %}
   {% endfor %}
   {% assign footer_columns = cols | split: '|' %}

   {% for footer_column in footer_columns %}
   {% include '_footer-columns' %}
   {% endfor %}
 </div>
 {% endif %}
</div>
{% if has_footer_navbar %}{% include 'navbar' with 'footer' %}{% endif %}
</footer>
