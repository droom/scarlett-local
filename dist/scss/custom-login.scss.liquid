#register,
#login-form{
	margin-top: 30px;
}


.login{

	.customer-login-form{

		#customer-login-form{

			.form-group,
			input,
			#forgotten-password-link,
			#login_password,
			#login_email,
			#customer_password,
			.btn-primary{
				margin: 5px 0;

			}
		}
	}

	.form-group{


		.col-lg-10,
		.col-lg-offset-2
		{
			width: 100%;
			margin: auto;
			float: none;
		}

		.col-lg-offset-2{
			margin: 0;
		}
	} 

	border: 1px $sosLightGrey solid;
	width: 100%;
	padding: 0 40px 40px 40px;
	margin: auto;
	text-align: center;

	input{
		text-align: center;
		width: 100%;
	}

	label{
		display: none;
	}


	.hull-btn{
		margin: auto;
	}



	.login-or{
		margin: 8px 0 14px 0;
	}

	.horizontalbreak{
		margin: 15px 0 0 0;
		border-top: 1px solid $sosLightGrey;
		border-bottom: 1px solid $sosLightGrey;

	}

	.form-horizontal .form-group, 
	.form-wrapper-horizontal #customer-register-form form .form-group, 
	.form-wrapper-horizontal #customer-login-form form .form-group, 
	.form-wrapper-horizontal #customer-recover-password-form form .form-group, 
	.form-wrapper-horizontal #customer-password-form form .form-group, 
	.form-wrapper-horizontal #customer-address-form form .form-group{
		margin-left: 0;
	}

}






/* Max width */

/*  <Phone>  */
@media (max-width: $screen-xs-min) {
	.login{

		padding: 0 30px 30px 30px;

	}
}

/*  <Tablet>  */
@media (min-width: $screen-xs-min) {
	.login{
		max-width:420px;
	}
}

/*  <Desktop Small>  */
@media (min-width: $screen-sm-min) {
	.login{
		max-width:420px;

	}

}

/*  <Desktop Large>  */
@media (min-width: $screen-md-min) {
	.login{
		max-width:420px;

		.form-group{


			.col-md-10 {
				width: 100%;
			}
		}

	}





}



