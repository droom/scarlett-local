.masonary-tile{
	margin: 25px 0 0 0;
}

.masonary-tile h5 {
	padding: 0;
	margin: 0;
	position: absolute;
	bottom: 12px;
	left: 12px;
	font-size: 15px;
}

.masonary-tile .price{
	display: none;
}	

.masonary-tile .product-thumbnail{
	padding: 0;
	margin: 0;
}

.template-collection{
	.page-header{
		margin: 15px 0 15px 0;
		padding: 0;
		h1{
			margin: 0;
			padding: 0
		}
		p{
			margin: 0;
			padding: 0;
		}
	}
}

@media (max-width: $screen-xs-min) {

	.template-collection{

		margin: 10px 0 10px 0;

		.page-header{

			h1{
				font-size: 25px;
				margin: 0 0 7px 0;
				padding: 0;
			}

			p{
				margin: 0;
				padding: 0;
			}
		}
	}


}

@media (min-width: $screen-xs-min) {
	.template-collection{

		margin: 10px 0 10px 0;

		.page-header{
			h1{
				margin: 0 0 10px 0;
				padding: 0
			}
			p{
				margin: 0;
				padding: 0;
			}
		}
	}

}

@media (min-width: $screen-sm-min) {

	.template-collection{

		.page-header{
			
			h1 {
				margin: 0;
				padding: 0
			}

			p {
				margin: 0;
				padding: 0;
			}
		}
	}
}

@media (min-width: $screen-md-min) {

	.template-collection{

		.page-header{
			
			margin: 10px 0 10px 0;

			h1 {
				margin: 0 0 5px 0;
				padding: 0
			}

			p {
				margin: 0;
				padding: 0;
			}
		}
	}
}


