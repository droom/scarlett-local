.masonary-tile{
	margin: 25px 0 0 0;
}

.masonary-tile h5 {

	padding: 0;
	margin: 0;
	position: absolute;
	bottom: 12px;
	left: 12px;
	font-size: 15px;
	color: $sosMidGrey;

}

.masonary-tile .price{

	display: none;

}

.masonary-tile .product-thumbnail{

	padding: 0;
	margin: 0;

}


.masonary{
	width: 100%;
}


.template-collection{

	margin: 15px 0 15px 0;

	#collection-intro{

		padding: 20px 0 20px 0;

		h1{
			margin: 0 0 10px 0;
			padding: 0
		}
		p{
			margin: 0 0 10px 0;
			padding: 0;
      font-size: 1.3em;
		}
	}
}

@media (max-width: $screen-xs-min) {

	.template-collection{

		.masonary-tile{
			width: 100%;
		}

		#collection-intro{
			padding: 20px 0 20px 0;
			h1{
				font-size: 25px;
			}

		}
	}


}

@media (min-width: $screen-xs-min) {

	.template-collection{

		.masonary-tile{
			width: 100%;
		}

		#collection-intro{
			padding: 20px 0 5px 0;

		}
	}

}

@media (min-width: $screen-sm-min) {

	.template-collection{

		.masonary-tile{
			width: 50%;
		}

		#collection-intro{
			padding: 0 0 12px 0;
		}
	}
}

@media (min-width: $screen-md-min) {

	.template-collection{

		.masonary-tile{
			width: 33%;
		}

		#collection-intro{
			padding: 0 0 12px 0;
		}
	}
}


