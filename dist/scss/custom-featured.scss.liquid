.as-featured{
  padding: 20px 20px 30px 20px;
  display: block;
  min-height: 120px;
  background: $sosLightGrey;
  text-align: center;

  img{
    padding: 40px 20px 30px 20px;
    max-width: 170px;
    // text-align: center;
  }

  h5 {
    text-transform: uppercase;
    letter-spacing: 0.09em;
  }

  hr{
    background-color: darken($sosLightGrey, 15%);
  }
}


@media (max-width: $screen-xs-min) {

  .as-featured{
    padding: 20px 20px 30px 20px;
    display: block;
    min-height: 120px;
    text-align: center;

    img{
      padding: 40px 20px 30px 20px;
      // text-align: center;
      margin: auto;
    }

    h5 {
      text-transform: uppercase;
      letter-spacing: 0.09em;
    }

    hr{
      background-color: darken($sosLightGrey, 15%);
    }
  }


}
