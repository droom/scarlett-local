.template-product {
	.product-section{
		margin: 1.5em 0 3em 0;
		display: block;
	}


	.productHero-feature{
		display: block;
		max-height: 350px;
		overflow: hidden;
  }


  .productHero-360{
    display: none;
    overflow: hidden;
    max-height: 350px;
  }


  .heroOffset{
    margin: -5% 0 0 2.8%;
  }




  .imageStack2{
    min-height: 350px;
  }


  .productHero-life{
    display:none;
  }

  #product-form h1{
    padding:0;
    margin: 0;
  }

  .product-price {
    margin: 0;
    font-size: 2em;
    font-weight: 500;
  }

  .page-header {
    padding: 0.6em 0 0.2em 0;
    margin: 0;
    border: none;
  }

  .centreCopy,
  .centreCopy p{
    text-align: center;
  }

  .selector-wrapper{
    width: 60%;
  }

  #quantity{
    width: 15%;
  }

  #product-select-option-0,
  .single-option-selector{
    width: 30%;
  }

  .center {
  }

  .center img{
    margin: auto;
    padding: 25px 0 40px 0;
  }

  .hallmarks{
    margin-top: 25px;
  }

  .purchase{
    padding: 20px 0;
  }

  .product-main-image img{
    // margin: auto;
  }

  .spritespin-instance{
    width: 100%;
    height: auto;
    margin: auto;
  }

  .spritespin{
    height: auto;
    width: auto;
    position: auto;
    padding:10px;
  }

  .spritespin img{
    margin: auto;
    padding:10px;
    width: 100%;
  }


  .priceBox-limit{
    border:1px solid $sosLightGrey;
    background: $sosLightGrey;
    padding:14px 14px 6px 14px;

    h5{
     margin: 0 0 12px 0;
     padding: 0;
     font-size:14px;
     font-weight: bold;

   }

   p{

   }

 }


 disabled {

  color: blue;

}


#socialButtons{
  position: relative;
  border:none;
  margin-top: 30px;

  td{
   width: 50%;
 }

 .friendbuy-4H-cGa{
   img {
    position: absolute;
    top: 0;
    left: 50%;
  }

}

}


#available{

    // margin: 10px 0 0 0;

    .available-unit{
     margin: 0 0 15px 0;
     display: inline-block;
     vertical-align: top;


     .available-image{
     }

     p{

      margin:-16px 0 0 12px;
      text-align: center;
      width: 120px;
    }
  }
  .available-unit-wrap{
   width: auto;
 }
}
.priceBox {
  min-height: 60px;
  margin: 0 0 10px 0;
  input {
   padding: 0;
   margin: 0;
 }
 .priceBox-price{
   float: left;
   width: 26%;
   margin: 18px 0 0 0;
   padding: 0 8px 0 12px;

   h3 {
    margin: 0;
    padding: 0;
    font-size: 18px;
  }
}

.priceBox-title{
 float: left;
 width: 40%;
 margin: 14px 0 0 0;

 p{
  padding: 6px 10px ;
  font-size: 11px ;
}
}

.priceBox-button{
 p{
  margin: 14px 0 0 0;
  padding: 6px 5px ;
  font-size: 11px ;
}


float: left;
width: 25%;
overflow: hidden;
margin-right: 0;
padding: 0 3px;

.addtocart {

  width: 100%;;
  padding:20px 0 20px 0;
  border: none;
  font-weight: bold;
  margin-right:0;
}

webkit-transition: all 200ms ease;
-moz-transition: all 200ms ease;
-ms-transition: all 200ms ease;
-o-transition: all 200ms ease;
transition: all 200ms ease;

}

.priceBox-button:hover{
 margin-right:4px;
}

.priceBox-arrow{
 float: left;
 width: 6%;
 margin: 20px 0 0 0;

 p{
  font-weight: bold;
}
}

}

.with-prescription,
.without-prescription{
  border:1px solid $sosLightGrey;
  background: none;
  .priceBox-price{
   h3{
    color: $sosMidGrey;
  }

}

.priceBox-title{
 p{
  border-left: 1px solid $sosLightGrey;
}
}

.priceBox-button{
 .addtocart{
  color: $sosRed;
}
}

.priceBox-arrow{
 p{
  color: $sosRed;
}
}

}

.home-try-on{
  border:1px solid $sosRed;
  background: $sosRed;

  .priceBox-price{
   h3{
    color: $sosLightGrey;
  }
}

.priceBox-title{
 p{
  border-left: 1px solid $sosLightGrey;
  color: $sosLightGrey;
}
}

.priceBox-button{

 p{
  color: $sosLightGrey;
}

.addtocart{
  color: $sosLightGrey;
}
}

.priceBox-arrow{
 p{
  color: white;
}
}

}



}

/*  <Phone>  */
@media (max-width: $screen-xs-min) {
	.template-product {

		.page-header {
			padding: 0.1em 0 0.1em 0;
			font-size: 24px;

		}
		.product-section{
			margin: 1.5em 0 1em 0;
			display: block;
		}
	}

	.col-sm-8{
		width: 100%;
		padding: 20px 0 0 0;
	}

	.col-sm-4{
		width: 100%;
		padding: 0;
	}
}


/*  <Tablet>  */
@media (min-width: $screen-xs-min) {


	.template-product {


		.page-header {
			padding: 0.1em 0 0.4em 0;
		}
		.product-section{
			margin: 1.5em 0 1em 0;
			display: block;
		}
	}

	.col-sm-8{
		width: 100%;
		padding: 20px 0 0 0;
	}

	.col-sm-4{
		width: 100%;
		padding: 0;
	}
}

/*  <Desktop Small>  */
@media (min-width: $screen-sm-min) {


	.template-product {

		.product-section{
			margin: 1.5em 0 2em 0;
			display: block;
		}
	}
	.col-sm-8{
		width: 60%;
		padding: 18px 20px 0 0;
	}
	.col-sm-4{
		width: 40%;
	}
}


/*  <Desktop Large>  */
@media (min-width: $screen-md-min) {


	.template-product {

		.container {
			width: 1000px;
		}

		.col-sm-8{
			width: 65%;
			padding: 18px 30px 0 0;
		}

		.col-sm-4{
			width: 35%;
		}
	}

}









