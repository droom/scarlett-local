#socialButtons{
	position: relative;
	border:none;
	margin-top: 30px;

	td{
		width: 50%;
	}

	.friendbuy-4H-cGa{
		img {
			position: absolute;
			top: 0;
			left: 50%;
		}

	}

}



/* Available units */

#available{
	.available-unit{
		margin: 0 0 15px 0;
		display: inline-block;
		vertical-align: top;
		p{

			margin:-16px 0 0 12px;
			text-align: center;
			width: 120px;
		}
	}
	.available-unit-wrap{
		width: auto;
	}

}








.priceBox {
	width: 100%;
	margin: 5px 0 0 0;

	td{
		height: 60px;
		vertical-align: middle;
	}

	h3 {
		margin: 0;
		padding: 0 14px;
		font-size: 18px;
	}

	p{
		margin: 0 ;
		padding: 0 12px;
		font-size: 11px ;
	}

	input {
		padding: 0;
		margin: 0;
	}


	.priceBox-price{
		width: 26%;
	}

	.priceBox-title{
		width: 40%;
	}

	.priceBox-arrow{
		width: 6%;
	}

	.priceBox-button{

		width: 25%;

		overflow: hidden;
		padding: 0 3px;

		webkit-transition: all 200ms ease;
		-moz-transition: all 200ms ease;
		-ms-transition: all 200ms ease;
		-o-transition: all 200ms ease;
		transition: all 200ms ease;


		.priceBox-button:hover{

			width: 25%;

		}



		.addtocart {
			width: 100%;;
			border: none;
		}
	}

}







/* Colouring */

.with-prescription,
.without-prescription{
	border:1px solid $sosLightGrey;
	background: none;
	.priceBox-price{
		h3{
			color: $sosMidGrey;
		}

	}

	.priceBox-title{
		p{
			border-left: 1px solid $sosLightGrey;
		}
	}

	.priceBox-button{
		.addtocart{
			color: $sosRed;
		}
	}

	.priceBox-arrow{
		p{
			color: $sosRed;
		}
	}
}




.home-try-on{
	border:1px solid $sosRed;
	background: $sosRed;

	.priceBox-price{
		h3{
			color: $sosLightGrey;
		}
	}

	.priceBox-title{
		p{
			border-left: 1px solid $sosLightGrey;
			color: $sosLightGrey;
		}
	}

	.priceBox-button{

		p{
			color: $sosLightGrey;
		}

		.addtocart{
			color: $sosLightGrey;
		}
	}

	.priceBox-arrow{
		p{
			color: white;
		}
	}

}



}




/*  <Phone>  */
@media (max-width: $screen-xs-min) {
	.template-product {
		.page-header {
			padding: 0.1em 0 0.1em 0;
			font-size: 24px;
		}
		.product-section{
			margin: 1.5em 0 1em 0;
			display: block;
		}
	}
	.col-sm-8{
		width: 100%;
		padding: 20px 0 0 0;
	}
	.col-sm-4{
		width: 100%;
		padding: 0;
	}
}


/*  <Tablet>  */
@media (min-width: $screen-xs-min) {
	.template-product {
		.page-header {
			padding: 0.1em 0 0.4em 0;
		}
		.product-section{
			margin: 1.5em 0 1em 0;
			display: block;
		}
	}
	.col-sm-8{
		width: 100%;
		padding: 20px 0 0 0;
	}
	.col-sm-4{
		width: 100%;
		padding: 0;
	}
}

/*  <Desktop Small>  */
@media (min-width: $screen-sm-min) {
	.template-product {
		.product-section{
			margin: 1.5em 0 2em 0;
			display: block;
		}
	}
	.col-sm-8{
		width: 60%;
		padding: 18px 20px 0 0;
	}
	.col-sm-4{
		width: 40%;
	}
}

/*  <Desktop Large>  */
@media (min-width: $screen-md-min) {
	.template-product {
		.container {
			width: 1000px;
		}
		.col-sm-8{
			width: 65%;
			padding: 18px 30px 0 0;
		}
		.col-sm-4{
			width: 35%;
		}
	}

}









