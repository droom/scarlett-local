.template-product {

	.product-section{
		margin: 1.5em 0 3em 0;
		display: block;
	}

	.productHero-feature{
		display: block;
	}

	.productHero-360{
		display: none;
	}

	.productHero-life{
		display:none;
	}

	#product-form h1{
		padding:0;
		margin: 0;
	}

	.product-price {
		margin: 0;
		font-size: 2em;
		font-weight: 500;
	}

	.page-header {
		padding: 0.6em 0 0.2em 0;
		margin: 0;
		border: none;
	}

	.centreCopy ,
	.centreCopy p{
		text-align: center; 
	}

	.selector-wrapper{
		width: 60%;
	}

	#quantity{
		width: 15%;
	} 

	#product-select-option-0,
	.single-option-selector{
		width: 30%;
	}


	.btn-primary {
		border: none;
		color: #fff;
		background-color: #a54c3a;
	}

	.center {
	}

	.center img{
		margin: auto;
		padding: 25px 0 40px 0;
	}
	
	.hallmarks{
		margin-top: 25px;
	}

	.purchase{
		padding: 20px 0;
	}

	.product-main-image{
		background-color: red;
	}

	.product-main-image img{
		margin: auto;
		text-align: center;
	}

	.spritespin{
		width: 100%;
	}

	.spritespin img{
		width: 100%;
	}


}

/*  <Phone>  */
@media (max-width: $screen-xs-min) {

	header {
		border-bottom: 1px solid $sosLightGrey;
	}
	.col-sm-8{
		width: 100%;
		padding: 0;
	}

	.col-sm-4{
		width: 100%;
		padding: 0;
		background-color: pink;
	}
}


/*  <Tablet>  */
@media (min-width: $screen-xs-min) {
	

	header {
		border-bottom: none;
	}

	.col-sm-8{
		width: 100%;
		padding: 0;
		// background-color: green;

	}

	.col-sm-4{
		width: 100%;
		padding: 0;
	}
}

/*  <Desktop Small>  */
@media (min-width: $screen-sm-min) {
	header {
		border-bottom: none;
	}
	.col-sm-8{
		width: 60%;
		padding: 0;
	}
	.col-sm-4{
		width: 40%;
	}
}


/*  <Desktop Large>  */
@media (min-width: $screen-md-min) {
	.container {
		width: 1000px;
	}

	body{
	}

	header {
		border-bottom: none;
	}

	.col-sm-8{
		width: 65%;
		padding: 0;
	}

	.col-sm-4{
		width: 35%;
	}

}









