

.template-index{

	header {
		border-bottom: none;
	}
	.container{
		width: 100%;
	}
	#content{
		padding: 0;
	}



	.carousel-control {
		z-index: 9;
	}

	.carousel-caption{
		margin: 0;
		padding: 0;
		text-shadow: none;
		min-height: 90px;


	}	

	.carousel-caption h2 {
		margin: 0;
		padding: 0;
	}

	.carousel-caption p {
		margin: 0;
		padding: 0;
	}

	.carousel-caption,
	#footer-content {
		padding: 0 7%;
	}

}



/* Phone */

@media (max-width: $screen-xs-min) {
	.template-index{

		.carousel-caption,
		#footer-content {
			padding: 0 7%;
			margin: 0;
			width: 100%;

			h2{
				padding: 15px 0 5px 0;	
			}

		}


		.carousel {
			margin-bottom: 0;
		}

		.carousel-control .fa {
			position: absolute;
			bottom: 0;
			z-index: 5;
			font-size: 50px;
			width: 35px;
			height: 35px;
			margin-top: -15px;
		}

		.carousel-indicators {
			display: none;
		}

	}
}

/* Tablet */

@media (min-width: $screen-xs-min) {
	.template-index{

		.carousel-caption,
		#footer-content {
			padding: 0 7%;
			margin: 0;
			width: 100%;

			h2{
				padding: 15px 0 5px 0;	
			}

		}

		.carousel {
			margin-bottom: 40px;
		}

		.carousel-indicators {
			bottom: -45px;
		}

		.carousel-indicators .active,
		.carousel-indicators li {
			width: 20px;
			height: 20px;
			margin: 7px;
		}
	}
}


@media (min-width: $screen-sm-min) {
	.template-index{

		.navbar {
			margin-bottom: 0;
		}

		.carousel {
			margin-bottom: 10px;
		}

		.carousel-caption {


			background: -moz-linear-gradient(-45deg,  rgba(255,255,255,0.7) 0%, rgba(190,220,244,0) 50%, rgba(125,185,232,0) 100%); /* FF3.6+ */
			background: -webkit-gradient(linear, left top, right bottom, color-stop(0%,rgba(255,255,255,0.7)), color-stop(50%,rgba(190,220,244,0)), color-stop(100%,rgba(125,185,232,0))); /* Chrome,Safari4+ */
			background: -webkit-linear-gradient(-45deg,  rgba(255,255,255,0.7) 0%,rgba(190,220,244,0) 50%,rgba(125,185,232,0) 100%); /* Chrome10+,Safari5.1+ */
			background: -o-linear-gradient(-45deg,  rgba(255,255,255,0.7) 0%,rgba(190,220,244,0) 50%,rgba(125,185,232,0) 100%); /* Opera 11.10+ */
			background: -ms-linear-gradient(-45deg,  rgba(255,255,255,0.7) 0%,rgba(190,220,244,0) 50%,rgba(125,185,232,0) 100%); /* IE10+ */
			background: linear-gradient(135deg,  rgba(255,255,255,0.7) 0%,rgba(190,220,244,0) 50%,rgba(125,185,232,0) 100%); /* W3C */
			filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#b3ffffff', endColorstr='#007db9e8',GradientType=1 ); /* IE6-9 fallback on horizontal gradient */

			
			height: 100%;
			width: 100%;

			top: 0;
			left: 0;

			padding: 25px 7%;
			margin: 0;

			h2{
				padding: 0;
				margin: 10px 0 10px 0;	
			}
			p{
				width: 40%;
				font-size: 15px;
			}
		}

		.carousel-indicators{
			bottom: -42px;
		}

		.carousel-indicators .active,
		.carousel-indicators li {
			width: 10px;
			height: 10px;
			margin: 4px;
		}
	}
}

