

.template-index{

	header {
		border-bottom: none;
	}
	.container{
		width: 100%;
	}
	#content{
		padding: 0;
	}



	.carousel-control {
		z-index: 9;
	}

	.carousel-caption{
		margin: 0;
		padding: 0;
		text-shadow: none;
		min-height: 90px;
	}	

	.carousel-caption h2 {
		margin: 0;
		padding: 0;
	}

	.carousel-caption p {
		margin: 0;
		padding: 0;
	}

	.carousel-caption,
	#footer-content {
		padding: 0 7%;
	}

}



/* Phone */

@media (max-width: $screen-xs-min) {
	.template-index{

		.carousel-caption,
		#footer-content {
			padding: 0 7%;
			margin: 0;
			width: 100%;

			h2{
				padding: 15px 0 5px 0;	
			}

		}


		.carousel {
			margin-bottom: 0;
		}

		.carousel-control .fa {
			position: absolute;
			bottom: 0;
			z-index: 5;
			font-size: 50px;
			width: 35px;
			height: 35px;
			margin-top: -15px;
		}

		.carousel-indicators {
			display: none;
		}

	}
}

/* Tablet */

@media (min-width: $screen-xs-min) {
	.template-index{

		.carousel-caption,
		#footer-content {
			padding: 0 7%;
			margin: 0;
			width: 100%;

			h2{
				padding: 15px 0 5px 0;	
			}

		}

		.carousel {
			margin-bottom: 40px;
		}

		.carousel-indicators {
			bottom: -45px;
		}

		.carousel-indicators .active,
		.carousel-indicators li {
			width: 20px;
			height: 20px;
			margin: 7px;
		}
	}
}


@media (min-width: $screen-sm-min) {
	.template-index{

		.navbar {
			margin-bottom: 0;
		}

		.carousel {
			margin-bottom: 10px;
		}

		.carousel-caption {

			top: 0;
			left: 0;
			padding: 20px 7%;
			margin: 0;
			width: 50%;

			h2{
				padding: 0;
				margin: 10px 0 0 0;	
			}
		}

		.carousel-indicators{
			bottom: -42px;
		}

		.carousel-indicators .active,
		.carousel-indicators li {
			width: 10px;
			height: 10px;
			margin: 4px;
		}
	}
}

