.carousel-control {
	z-index: 9;
}

.carousel-caption{
	text-shadow: none;
}	

.carousel-caption h2 {
	margin: 0;
	padding: 0;
}

.carousel-caption p {
	margin: 0;
	padding: 0;
}


@media (max-width: $screen-xs-min) {

	.carousel {
		margin-bottom: 0em;
	}

	.carousel-caption h2{
		padding: 10px 0 2px 0;
	}

	.carousel-control .fa {
		position: absolute;
		bottom: 0;
		z-index: 5;
		font-size: 50px;
		width: 35px;
		height: 35px;
		margin-top: -15px;
	}

	.carousel-indicators {
		display: none;
	}

	.carousel-caption {
		width: 100%;
	}

}

@media (min-width: $screen-xs-min) {

	.carousel-caption {
		margin-top: 6px;
		margin-left: 6px;
		width: 100%;

		h2{
			padding: 10px 0 2px 0;
		}

		p{
			font-size: 15px;
		}
	}

	.carousel-indicators{
		bottom: -60px;
	}

	.carousel-indicators .active,
	.carousel-indicators li {
		width: 20px;
		height: 20px;
		margin: 7px;
	}
}


@media (min-width: $screen-sm-min) {

	.carousel-caption {
		width: 40%;
		margin-top: 10px;
		margin-left: 10px;
	}

	.carousel-caption h2{
		padding: 0 0 10px 0;

	}
}

@media (min-width: $screen-md-min) {

	.carousel-caption {
		margin-left: 30px;
		margin-top: 25px;
	}

	.carousel-caption h2{
		padding: 0 0 10px 0;

	}
}



