.template-index{

	header {
		border-bottom: none;
	}

	.container{
		width: 100%;
	}
	#content{
		padding: 0;
	}


	.carousel-control {
		z-index: 40;
	}

	.carousel-caption{
		margin: 0;
		padding: 0;
		text-shadow: none;
		min-height: 90px;

		a {
			text-decoration: none;
		}

		a:hover {
			text-decoration: none;
		}
	}


	.carousel-indicators {

  li{
   border: 1px solid $sosMidGrey;
  }

  li.active{
   background: $sosMidGrey;

  }


 }




 .carousel-caption h2 {
  margin: 0;
  padding: 0;
 }

 .carousel-caption p {
  margin: 0;
  padding: 0;
 }

 .carousel-caption,
 #footer-content {
  padding: 0 7%;
 }

 #main-nav{
 }

}



/* Phone */

@media (max-width: $screen-xs-min) {
	.template-index{

		.carousel-caption{

			h2{
				font-size: 20px;
			}

			p{
				line-height: 1.65em;
				margin: 8px 0 0 0;
			}


		}

		.carousel-caption,
		#footer-content {
			padding: 0 7%;
			margin: 0;
			width: 100%;

			h2{
				padding: 15px 0 5px 0;
			}

		}


		.carousel {
			margin-bottom: 0;
		}

		.carousel-control .fa {
			position: absolute;
			bottom: 0;
			z-index: 5;
			font-size: 50px;
			width: 35px;
			height: 35px;
			margin-top: -15px;
		}

		.carousel-indicators {
			display: none;
		}

	}
}

/* Tablet */
@media (min-width: $screen-xs-min) {
	.template-index{
		.carousel-caption,
		#footer-content {
			padding: 0 7%;
			margin: 0;
			width: 100%;

			h2{
				padding: 17px 0 10px 0;
			}

		}
		.carousel {
			margin-bottom: 40px;
		}

		.carousel-indicators {
			bottom: -45px;
		}

		.carousel-indicators .active,
		.carousel-indicators li {
			width: 15px;
			height: 15px;
			margin: 10px;
		}
	}
}


@media (min-width: $screen-sm-min) {
	.template-index{
		.navbar {
			margin-bottom: 0;
		}


		#main-nav{
			border-top: 1px solid $sosLightGrey;
			border-bottom: none;
		}


		.carousel {
			margin-bottom: 10px;
		}

		.carousel-caption {
			height: 100%;
			width: 100%;
			top: 0;
			left: 0;
			padding: 25px 7%;
			margin: 0;

			h2{
				padding: 0;
				margin: 10px 0 10px 0;
			}
			p{
				width: 40%;
				font-size: 15px;
			}
		}
		.carousel-indicators{
			bottom: -48px;
		}

		.carousel-indicators .active,
		.carousel-indicators li {
			width: 10px;
			height: 10px;
			margin: 4px;
		}
	}
}

@media (min-width: $screen-md-min) {
	.template-index{

		#main-nav{
			border-top: 1px solid $sosLightGrey;
			border-bottom: none;
		}

		.carousel-caption {
			h2{
				padding: 0;
				margin: 30px 0 10px 0;
			}

		}
	}

}






