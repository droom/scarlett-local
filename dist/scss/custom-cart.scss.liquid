#cart-wrap {

	.checkout_breadcrumb li a{
		color: #333;
	}

	.checkout_breadcrumb ul{
		display: inline;
		padding: 0;
		margin: 0;
	}

	.empty{
		h5{
			text-align: center;
		}
		background-color: #f2f2f2;
		padding: 40px 20px;
	}

	.checkout_remove{
		text-decoration: none;
		color: $sosLightGrey;
	}

	.cellHide{
		visibility:hidden;
	}

	.checkout_buy,
	.checkout_try{
		display: block;
		border: 1px solid $sosLightGrey;

		h5{
			margin: 0;
			padding: 0;
		}
		p{
			margin: 0;
			padding: 0;
		}
		a{
			text-decoration: none;
		}
		a:hover{
			text-decoration: none;
		}
	}
	.checkout_total{
		margin-top: 20px;
	}
	.checkout_remove {
		font-size: 20px;
	}
	.generate_empty_cells{
	}
}


.col-cart-right{
	.priceTotal{
		padding: 20px;
		text-align: center;
		border:1px solid $sosLightGrey;
	}

}






/*  <Phone>  */
@media (max-width: $screen-xs-min) {

	#cart-wrap {

		.checkout_cell2,
		.checkout_cell3,
		.checkout_cell4,
		.checkout_cell5 {
			padding: 5px 5px;
		}

		.checkout_cell1 {
			width: 22%;
			float: left;
			background-color: pink;
		}

		.checkout_cell2 {
			width: 40%;
			float: left;
			background-color: lightBlue;
		}

		.checkout_cell3{
			width: 10%;
			float: left;
			text-align: center;
			background-color: pink;
		}

		.checkout_cell4 {
			width: 16%;
			float: left;
			text-align: center;
			background-color: lightBlue;
		}

		.checkout_cell5 {
			width: 7%;
			float: right;
			text-align: center;
			background-color: pink;
		}
		.checkout_titles {
			.checkout_cell2,
			.checkout_cell3,
			.checkout_cell4,
			.checkout_cell5 {
				padding: 0 5px;
			}
			display: block;
		}

		.checkout_buy,
		.checkout_try {
			margin-top: 10px;
			min-height: 70px;
		}
	}
}

