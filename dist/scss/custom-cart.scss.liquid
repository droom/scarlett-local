/* Boundary object */	




.checkout_cell1,
.checkout_cell2,
.checkout_cell3,
.checkout_cell4,
.checkout_cell5,
.checkout_cell6
{
	float: left;
	width: 16%;
}

.checkout_stage1,
.checkout_stage2,
.checkout_stage3{
	margin-top: 20px;
	padding: 20px;
	display: block;
}

.checkout_stage1{
}
.checkout_stage2{
}
.checkout_stage3{
}

.checkout_buy_wrap{
	margin: 0 0 50px 0;
}

.checkout_titles {
	.checkout_cell2,
	.checkout_cell3,
	.checkout_cell4,
	.checkout_cell5,
	.checkout_cell6 {
		padding: 0 5px;
	}
	border-bottom: 1px $sosLightGrey solid;

	p {
		margin: 0 0 4px;
	}
}

.checkout_cell3,
.checkout_cell4,
.checkout_cell5,
.checkout_cell6{
	text-align: center;
}

.checkout_main{
	h2{
		margin: 15px 0 30px 0;
	}

	h4{
		margin: 60px 0 20px 0;
		padding: 8px 0;	
		border-bottom: $sosLightGrey 1px solid;
	}
}

#cart-wrap {

	.radioWrap{
		padding: 30px;
		background-color: lightBlue;
		display: block;
		margin: 20px;

		label {
			background-color: red;
		}

		input[type="radio"]{
			background-color: green;
		}

	}


	.checkout_topbar{
		min-height: 10px;
		width: 100%;
	}

	.checkout_breadcrumb li a{
		color: #333;
	}

	.checkout_breadcrumb{
		padding: 0;
		margin: 0;

		li:first-child{
			padding: 0;
		}

		li{
			display: inline;
			padding: 0 0 0 20px;
		}
	}


	.empty{
		h5{
			text-align: center;
		}
		background-color: #f2f2f2;
		padding: 40px 20px;
	}

	.checkout_remove{
		text-decoration: none;
		color: $sosLightGrey;
	}

	.cellHide{
		visibility:hidden;
	}



	.checkout_buy,
	.checkout_try{
		display: block;
		border: 1px solid $sosLightGrey;

		h5{
			margin: 0;
			padding: 0;
		}
		p{
			margin: 0;
			padding: 0;
		}
		a{
			text-decoration: none;
		}
		a:hover{
			text-decoration: none;
		}
	}
	.checkout_total{
		margin-top: 20px;
	}

	.checkout_remove {
		font-size: 20px;
	}

	.generate_empty_cells {
	}
}

.col-cart-right {
	.priceTotal {
		font-size: 20px;
		padding: 20px;
		text-align: center;
	}
}


