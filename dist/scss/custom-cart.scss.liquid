$sosLightGrey: #ccc;

#cart {

	.checkout_cell2,
	.checkout_cell3,
	.checkout_cell4,
	.checkout_cell5 {
		padding: 15px 5px;
	}

	.checkout_cell1{
		width: 26%;
		float: left;
	}

	.checkout_cell2{
		width: 40%;
		float: left;
	}

	.checkout_cell3{
		width: 10%;
		float: left;
		text-align: center;
	}

	.checkout_cell4{
		width: 10%;
		float: left;
		text-align: center;
	}

	.checkout_cell5{
		width: 10%;
		float: right;
		text-align: center;
	}

	.checkout_titles{
		.checkout_cell2,
		.checkout_cell3,
		.checkout_cell4,
		.checkout_cell5 {
			padding: 0 5px;
		}
		display: block;
	}


	.empty{

		h5{
			text-align: center;
		}
		
		background-color: #f2f2f2;
		padding: 40px 20px;
	}

	.checkout_remove{
		text-decoration: none;
		color: $sosLightGrey;
	}

	.cellHide{
		display: none;
	}

	.checkout_buy,
	.checkout_try{
		margin-top: 10px;
		display: block;
		border: 1px solid $sosLightGrey;
		min-height: 95px;
		h5{
			margin: 0;
			padding: 0;
		}
		p{
			margin: 0;
			padding: 0;
		}
		a{
			text-decoration: none;
		}
		a:hover{
			text-decoration: none;
		}
	}
	.checkout_total{
		margin-top: 20px;
	}
	.checkout_remove {
		font-size: 20px;
	}
	.generate_empty_cells{
	}

	.priceTotal{
		background-color: lightBlue;
		padding: 20px;
		text-align: center;
	}


}




