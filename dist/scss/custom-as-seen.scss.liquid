 #footer-content {
  .as-seen{
    border-top: 1px solid $sosLightGrey;
    margin:40px 0 70px 0;
    display: block;
    text-align: center;
    h6 {
      text-transform: uppercase;
      letter-spacing: 0.09em;
      text-align: center;
      font-weight: bold;
      margin: 20px 0 15px 0;
    }
    hr{
      background-color: darken($sosLightGrey, 15%);
    }
    div:nth-of-type(1),
    div:nth-of-type(2),
    div:nth-of-type(3),
    div:nth-of-type(4),
    div:nth-of-type(5){
      padding: 0;
    }
    .col-sm-5{
      margin: 0;
      padding: 0;
      width: 20%;
      float: left;
    }
  }
}
@media (max-width: $screen-xs-min) {
 #footer-content {
  .as-seen{
    h6 {
      margin-bottom: 20px;
    }
    .col-sm-5{
      width: 100%;
      img{
        margin: auto;
        width: 70%;
      }

    }
  }
}

}
