	}

	.page-header {
		border-top : none ;
	}

	#content,
	#footer-content{
		padding: 0;
	}

	.col-md-8{
		width: 56%;
		float: left;
		padding: 0 0 7em 0;
		p, li {
			padding: 0 0 0.7em 0;
			font-size: 1.25em;
			line-height: 1.7em;
		}

		img{
			margin-top: 20px;
		}
	}

	.col-md-4 {
		width:38%;
		float: right;
		border-top: none;
		padding: 0 0 7em 0;
		line-height: 1.7em;

		h2{
			margin: 0 0 1.3em 0;
		}
	}

	.col-sm-3{
		width: 25%;
		float: left;
	}

	#footer-content .row > div:nth-of-type(1),
	#footer-content .row > div:nth-of-type(2),
	#footer-content .row > div:nth-of-type(3),
	#footer-content .row > div:nth-of-type(4){
		padding-left: 0;
		padding-top: 5px;
	}
}

