/*** RESET ***/

.main-content{
	padding: 0;
	margin: 0;
}

.row {
	margin-left: 0;
	margin-right: 0;
}

.container {
	padding-left: 0;
	padding-right: 0;
}

.navbar {
	border-radius: 0px;
}

.col-xs-12, 
.col-sm-12,
.col-sm-6,
.col-xs-4{ 
	padding: 0;
}


.thumbnail, .product-thumbnail, .collection-thumbnail{
	border: none;
}

.page-header {
	padding : 1.6em 0 2em 0;
	margin  : 0 ;
	border  : none;
}


/* Button */

.btn{
	padding: 15px;
	border-radius: 0;
	background-color: $sosLightGrey;
}

.btn-primary {
	border: none;
	color: #fff;
	background-color: #a54c3a;
}


.btn-secondary {
	border: none;
	color: #7d7c74;
	background-color: #efedec;
}


.col-md-8,
.col-md-4 {

	h3{
		margin: 1em 0 0.75em 0;
	}

}


.noproductsfound{
	margin: 40px 0 0 0;

}


.contact-form{
	margin: 60px 0 0 0;
}



hr {
	margin:  0;
	padding: 0;
	height:  1px;
	border:  none;
	background-color: $sosLightGrey;	
}


footer .list-nav li {
	margin-top: 0.4em;
}

footer h4 {
	margin-top: 1em;
	margin-bottom: 1.5em;
}

/* Social */

#social{
	margin: 18px 0;
}

#login-form{
	margin-top: 25px;
}


.col-md-8 {
	ol{


		margin: 30px 0;

		li{
			margin-bottom: 10px; 
		}


		li:before{
			content: " ";
			background-color: #f6981b;
			padding: 5px 10px;
			float: left;
			margin-left: -20px; 	
			height: 30px;
			width: 30px;	

		}



	}


	.alert-success,
	.alert{
		padding: 18px 22px;
		width: 400px;
		margin-bottom: 25px;
		border: none;
		border-radius: 0px;
	}

	.alert-success{
		color: white;
		background-color: $sosGreen;
	}



	.alert-success p,
	.alert p {
		line-height: 1.6em;
		padding: 0;

	}

	
}

#contactFormMessage{
	padding: 12px;
	min-height: 200px;
}


.login{
	border:1px $sosLightGrey solid;
	padding:0 40px 40px 30px;
	margin:auto;
	width: 40%;
	text-align: center;

	input{
		text-align: center;
		width: 100%;

	}

	label{
		display: none;
	}

	h1{
	}

	.hull-btn{
		margin: auto;
	}

	.col-md-10{
		width: 100%;
	}

	.login-or{
		margin: 20px 0 0 0;
	}

	.horizontalbreak{
		margin: 15px 0 0 0;
		border-top: 1px solid $sosLightGrey;
		border-bottom: 1px solid $sosLightGrey;

	}


	.form-horizontal .form-group, 
	.form-wrapper-horizontal #customer-register-form form .form-group, 
	.form-wrapper-horizontal #customer-login-form form .form-group, 
	.form-wrapper-horizontal #customer-recover-password-form form .form-group, 
	.form-wrapper-horizontal #customer-password-form form .form-group, 
	.form-wrapper-horizontal #customer-address-form form .form-group{
		margin-left: 0;
	}


}



.form-group{
	width:100%;
} 



/*  <Phone>  */
@media (max-width: $screen-xs-min) {

	header {
		border-bottom: 1px solid $sosLightGrey;
	}



	.login{
		padding:0 40px 40px 30px;
		width: 100%;
	}


	.navbar-default {
		background-color: #fff;
		border-color: $sosLightGrey;
		border-width: 1px 0 1px 0;
	}
	.navbar-collapse {
		border: none;
	}

	.page-header {
		border-top : none;
	}

	#navbar-top .container,
	#content,
	#footer-content{
		padding: 0 7%;
	}

	.col-md-8{
		width: 100%;
		padding: 0 0 7em 0;

		p, li {
			padding: 0 0 0.7em 0;
			font-size: 1.25em;
			line-height: 1.7em;
		}
	}
	.col-md-4 {
		width: 100%;
		border-top: solid 1px $sosLightGrey ;
		padding: 1.25em 0 7em;
		line-height: 1.75em;

	}

	.masonary-tile{
		float: left;
		width: 100%;
	}

	.col-sm-3{
		width:100%;
		float:left;
	}

	#footer-content .row > div:nth-of-type(1),
	#footer-content .row > div:nth-of-type(2),
	#footer-content .row > div:nth-of-type(3),
	#footer-content .row > div:nth-of-type(4){
		padding-left: 0;
	}
}

/*  <Tablet>  */

@media (min-width: $screen-xs-min) {


	.login{
		padding: 0 40px 40px 30px;
		width: 85%;
		max-width: 500px;
	}

	.container{
		width: 90%;
		max-width: 1100px;
	}

	header {
		border-bottom: 1px solid $sosLightGrey;
	}

	.navbar-default {
		background-color: #fff;
		border-color: $sosLightGrey;
		border-width: 1px 0 1px 0;
	}
	.navbar-collapse {
		border: none;
	}

	.page-header {
		padding: 1em 0 1em 0;
	}

	#navbar-top .container,
	#content,
	#footer-content{
		padding: 0 7%;
	}
	.col-md-8{

		width: 100%;
		float: left;

		padding: 0 0 5em 0;

		p, li {
			padding: 0 0 0.7em 0;
			font-size: 1.25em;
			line-height: 1.7em;
		}

		img{
			margin-top: 20px;

		}
	}
	.col-md-4 {
		width: 100%;
		float: right;
		border-top: solid 1px $sosLightGrey ;
		padding: 1.25em 0 7em;
		line-height: 1.75em ;
	}

	.col-sm-3{
		width: 50%;
		float: left;
	}
	#footer-content .row > div:nth-of-type(1),
	#footer-content .row > div:nth-of-type(2),
	#footer-content .row > div:nth-of-type(3),
	#footer-content .row > div:nth-of-type(4){
		padding-left: 0;
	}

	.masonary-tile{
		float: left;
		width: 50%;
	}
}

/*  <Desktop Small>  */
@media (min-width: $screen-sm-min) {
	.container{
		width: 95%;
		max-width: 1100px;
	}


	.login{
		padding:0 40px 40px 30px;
		width: 60%;
	}

	header {
		border-bottom: none;
	}

	.page-header {
		border-top : none ;
	}

	#content,
	#footer-content{
		padding: 0;
	}

	.col-md-8{
		width: 56%;
		float: left;
		padding: 0 0 7em 0;
		p, li {
			padding: 0 0 0.7em 0;
			font-size: 1.25em;
			line-height: 1.7em;
		}

		img{
			margin-top: 20px;
		}
	}

	.col-md-4 {
		width:38%;
		float: right;
		border-top: none;
		padding: 0 0 7em 0;
		line-height: 1.7em;

		h2{
			margin: 0 0 1.3em 0;
		}
	}

	.col-sm-3{
		width: 25%;
		float: left;
	}

	#footer-content .row > div:nth-of-type(1),
	#footer-content .row > div:nth-of-type(2),
	#footer-content .row > div:nth-of-type(3),
	#footer-content .row > div:nth-of-type(4){
		padding-left: 0;
		padding-top: 5px;
	}
}

/*  <Desktop Large>  */

@media (min-width: $screen-md-min) {

	.container{
		width: 90%;
		max-width: 1100px;
	}


	.login{
		padding:0 40px 40px 30px;
		width: 40%;
	}



	header {
		border-bottom: none;
	}

	#content,
	#footer-content{
		padding: 0;
	}

	.col-md-8{
		padding: 0 5em 7em 0;
		p, li {
			padding: 0 0 0.7em 0;
			font-size: 1.25em;
			line-height: 1.7em;
		}

		h2{
			margin: 0 0 1.3em 0;
			padding: 0;
		}
	}

	.col-md-4 {
		border-top:none;
		padding: 0;
	}

	#footer-content .row > div:nth-of-type(1),
	#footer-content .row > div:nth-of-type(2),
	#footer-content .row > div:nth-of-type(3),
	#footer-content .row > div:nth-of-type(4){
		padding-left: 0;
		padding-top: 10px;
	}
}


.lifecycleImage{
	display: none;
}

#imageStack{
	width: 553px;
	height: 315px;
}