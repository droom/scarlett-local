/*** RESET ***/

.main-content{
	padding: 0;
	margin: 0;
}

.row {
	margin-left: 0;
	margin-right: 0;
}

.container {
	padding-left: 0;
	padding-right: 0;
}

.navbar {
	border-radius: 0px;
	border: none;

}

.col-xs-12,
.col-sm-12,
.col-sm-6,
.col-xs-4{
	padding: 0;
}

.thumbnail, .product-thumbnail, .collection-thumbnail{
	border: none;
}

.page-header {
	padding : 1.6em 0 2em 0;
	margin  : 0 ;
	border  : none;
}


.spin360{
	display:none;
}


/* Button */

.btn{
	padding: 15px;
	border-radius: 0;
	background-color: $sosLightGrey;
}

.btn-primary {
	border: none;
	color: #fff;
	background-color: #a54c3a;
}


.btn-secondary {
	border: none;
	color: #7d7c74;
	background-color: #efedec;
}






#search-wrap{

	.btn-search{
		height: 34px;
		padding: 10px 20px;
		margin: 0 0 0 10px;

	}
}

.col-md-8,
.col-md-4 {
	h3{
		margin: 1em 0 0.75em 0;
	}

	h4{
		margin: 1.3em 0 1em 0;
	}
}

.noproductsfound{
	margin: 40px 0 0 0;
}

.contact-form{
	margin: 60px 0 0 0;
}

.template-page-newsletter{
	.contact-form{
		margin: 0 0 0 0;
	}
}

#navbar-top{
	border-bottom: 1px $sosLightGrey solid;
}


hr {
	margin:  0;
	padding: 0;
	height:  1px;
	border:  none;
	background-color: $sosLightGrey;
}


footer {
	.list-nav li {
		margin-top: 0.4em;
	}
	h4 {
		margin-top: 1em;
		margin-bottom: 1em;
		font-weight: normal;
	}
	a{
		color: $sosMidGrey;
	}
	a:hover{
		color: $sosRed;
		text-decoration: none;
	}
}







/* Social */

#social{
	margin: 18px 0;
}


.productColor{
	display: block;
	font-size: 16px;
	margin: 4px 0 4px 0;
}

.newsletter-form{
	margin: 20px 0 0 10px;

	input{
		width: 60%;
		margin: auto;
	}

	width: 100%;


	.contact-form {
		margin: 0 0 0 0;
	}

	#contact_email {
		width: 100%;
		margin: 0 0 10px 0;
	}

}


.col-md-8 {
	ol{
		margin: 40px 0 0 0 ;
		padding: 0;

		li{
			margin-bottom: 10px;
			list-style: none;
			padding-left: 70px;
			background-repeat: no-repeat;
			background-position: 0 5px;
		}

		li:nth-child(1){
			background-image: url(//cdn.shopify.com/s/files/1/0538/0205/t/1/assets/ol-list-1.png);
		}
		li:nth-child(2){
			background-image: url(//cdn.shopify.com/s/files/1/0538/0205/t/1/assets/ol-list-2.png);
		}
		li:nth-child(3){
			background-image: url(//cdn.shopify.com/s/files/1/0538/0205/t/1/assets/ol-list-3.png);
		}
		li:nth-child(4){
			background-image: url(//cdn.shopify.com/s/files/1/0538/0205/t/1/assets/ol-list-4.png);
		}

	}

	.alert-success,
	.alert{
		padding: 18px 22px;
		width: 400px;
		margin-bottom: 25px;
		border: none;
		border-radius: 0px;
	}

	.alert-success{
		color: white;
		background-color: $sosGreen;
	}

	.alert-success p,
	.alert p {
		line-height: 1.6em;
		padding: 0;

	}


}

#contactFormMessage{
	padding: 12px;
	min-height: 200px;
}


.cart-break{
	margin: 10px 0;
}


#contact_email{
	width: 60%;
	margin: 0 0 10px 0;
}

.hiddenLogic{
	display:none;
}


